{% extends '/admin/article/list.html.twig' %}

{% block breadcumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('list_authors') }}">Auteur</a></li>
        <li class="breadcrumb-item active" aria-current="page">Liste</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="row ">
        <h5>Liste des auteurs</h5>
        <div class="col-9 bg-white">
            <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Classement</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
           
             {% for key,author in authors %}
                <tr id="{{author.id}}">
                    <td>{{ key+1 }}</td>
                    <td>{{ author.user.name }}</td>
                    <td>{{ author.user.email }}</td>
                    <td>
                        <a data-id="{{author.id}}" class="deleteLink" data-url="{{ path('delete_author') }}" style="cursor:pointer"  >
                            <span class="material-icons-outlined edit" >delete_outline</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            
            </tbody>
        </table>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-6">
            <h5 class="mb-3">Ajouter auteur</h5>
            {{ form_start(form) }}
            {{ form.user.name.vars.label }}
            {{ form_widget(form.user.name, { 'attr': {'class': 'form-control-lg mb-3'} }) }}
            {{ form.user.email.vars.label }}
            {{ form_widget(form.user.email, { 'attr': {'class': 'form-control-lg mb-3'} }) }}
            {{ form_widget(form.user.save, { 'attr': {'class': 'btn btn-primary save-button mb-5'} }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

